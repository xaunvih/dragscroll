<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Home | DragScroll</title>
    <style>
        .dragscroll-home {
            margin: 100px auto;
            max-width: 1000px;
        }

        .dragscroll-home #drag-scroll-demo ul {
            padding: 0;
            margin: 0;
            list-style-type: none;
            display: flex;
        }

        .dragscroll-home #drag-scroll-demo ul li {
            width: 200px;
            height: 200px;
            background-color: gray;
            flex-shrink: 0;
        }

        .dragscroll-home #drag-scroll-demo ul li:not(:last-child) {
            margin-right: 20px;
        }

        .dragscroll-home #drag-scroll-demo ul li img {
            width: 100%;
            height: 100%;
        }
    </style>
</head>

<body>
    <main class="dragscroll-home">
        <div id="drag-scroll-demo">
            <ul>
                <% for (var i =1; i <=10;  i++ ) { %>
                <li class="item">
                    <a href="https://www.google.com/">
                        <img
                            src="https://images.unsplash.com/photo-1602881917760-7379db593981?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1400&q=80" />
                    </a>
                </li>
                <% } %>
            </ul>
        </div>
    </main>
    <script>
        window.addEventListener('load', () => {
            const $container = document.getElementById('drag-scroll-demo')
            new DragScroll({
                $container: $container,
                gapSide: 200,
                speed: 2
            });
        })
    </script>
</body>

</html>